# Legend AI - Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# IMPORTANT: Never commit .env to Git - use .gitignore to exclude it

# Application Settings
DEBUG=false
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_urlsafe()

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/webhook/telegram

# Market Data API Keys
TWELVEDATA_API_KEY=your-twelvedata-api-key
FINNHUB_API_KEY=your-finnhub-api-key
ALPHAAVANTAGE_API_KEY=your-alphaavantage-api-key

# AI & Chart Services
OPENROUTER_API_KEY=your-openrouter-api-key
CHARTIMG_API_KEY=your-chartimg-api-key

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legend_ai

# Railway Deployment (auto-configured by Railway)
# RAILWAY_PUBLIC_DOMAIN=your-railway-domain.railway.app
# PORT=8000

# Optional: Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional: Logging
LOG_LEVEL=INFO
